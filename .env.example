# Virtuoso Trading System Environment Variables
# Copy this file to .env and fill in your values

# Application settings
DEBUG=false
PROJECT_NAME="Virtuoso Trading System"
VERSION="1.0.0"

# Exchange API Keys
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_secret_here

BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_secret_here

OKX_API_KEY=your_okx_api_key_here
OKX_SECRET=your_okx_secret_here
OKX_PASSPHRASE=your_okx_passphrase_here

# Trading Configuration
TRADING_MODE=paper  # paper or live
DEFAULT_EXCHANGE=binance
RISK_LIMIT_PERCENT=2.0
MAX_POSITIONS=5
MAX_RETRIES=3
RETRY_DELAY=1.0
DEFAULT_TIMEFRAME=1m
CACHE_TTL=300

# API Configuration
API_HOST=0.0.0.0
API_PORT=8003
API_KEY=your_secure_api_key_here
ENABLE_SWAGGER=true

# Database Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_token_here
INFLUXDB_ORG=your_org
INFLUXDB_BUCKET=market_data
DB_TIMEOUT=30000

# PostgreSQL Configuration (optional)
DB_HOST=postgres
DB_PORT=5432
DB_USER=virtuoso
DB_PASSWORD=virtuoso123
DB_NAME=virtuoso_trading

# Redis Configuration (optional)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/virtuoso.log

# Monitoring
ENABLE_MONITORING=true
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_INTERVAL=60

# Telegram Notifications (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Discord Notifications (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url-here

# Security settings
JWT_SECRET_KEY=your_jwt_secret_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENCRYPTION_KEY=your_encryption_key_here

# System Resources
MEMORY_LIMIT_PERCENT=80
CPU_LIMIT_PERCENT=90

# Time Zone
TZ=UTC

# Development settings
DEVELOPMENT_MODE=false