        if showLabels and bullOB
            label.new(bar_index, bullOBHigh,
                style=label.style_label_down,
                color=boxColorBull,
                textcolor=color.white,
                text=(bullOBConfirmed ? "Bull OB Confirmed" : "Bull OB")
            ) 

        if showLabels and bearOB
            label.new(bar_index, bearOBLow,
                style=label.style_label_up,
                color=boxColorBear,
                textcolor=color.white,
                text=bearOBConfirmed ? "Bear OB Confirmed" : "Bear OB"
            ) 